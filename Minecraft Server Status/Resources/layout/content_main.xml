<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:showIn="@layout/app_bar_main">

    <GridLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_margin="20dp"
         android:rowCount="9"
         android:columnCount="1">
        <GridLayout
            android:layout_row="0"
            android:layout_column="0"
            android:rowCount="1"
            android:columnCount="3"
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <ImageView
                android:layout_column="0"
                android:layout_row="0"
                android:id="@+id/ServerIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_texture_black_48dp"
                android:contentDescription="Server Icon" />
            <Space
                android:layout_column="1"
                android:layout_row="0"
                android:layout_width="10dp"
                android:layout_height="64dp" />
            <android.webkit.WebView
                android:layout_column="2"
                android:layout_row="0"
                android:id="@+id/ServerMotd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </GridLayout>
        <GridLayout
            android:layout_row="1"
            android:layout_column="0"
            android:rowCount="2"
            android:columnCount="1"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <GridLayout
                android:layout_row="0"
                android:layout_column="0"
                android:rowCount="1"
                android:columnCount="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_row="0"
                    android:layout_column="0"
                    android:text="Max players:"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:id="@+id/textView2" />
                <EditText
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:id="@+id/ServerMaxPlayers"
                    android:editable="false" />
                <TextView
                    android:layout_row="0"
                    android:layout_column="2"
                    android:text="    Online players:"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"/>
                <EditText
                    android:layout_row="0"
                    android:layout_column="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ServerOnlinePlayers"
                    android:editable="false" />
            </GridLayout>
        </GridLayout>
        <GridLayout
            android:layout_row="2"
            android:layout_column="0"
            android:rowCount="1"
            android:columnCount="2"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_row="0"
                android:layout_column="0"
                android:text="Version:"
                android:layout_width="90dp"
                android:layout_height="match_parent"/>
            <EditText
                android:layout_row="0"
                android:layout_column="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ServerVersion"
                android:editable="false" />
        </GridLayout>
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:max="100"
            android:progress="100"/>
        <GridLayout
            android:layout_row="4"
            android:layout_column="0"
            android:rowCount="1"
            android:columnCount="2"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_row="0"
                android:layout_column="0"
                android:text="Address:"
                android:layout_width="90dp"
                android:layout_height="match_parent"/>
            <EditText
                android:layout_row="0"
                android:layout_column="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/InputAddress"
                android:singleLine="true"
                android:hint="play.example.org" />
        </GridLayout>
        <GridLayout
            android:layout_row="5"
            android:layout_column="0"
            android:rowCount="1"
            android:columnCount="2"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_row="0"
                android:layout_column="0"
                android:text="Port:"
                android:layout_width="90dp"
                android:layout_height="match_parent"/>
            <EditText
                android:layout_row="0"
                android:layout_column="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/InputPort"
                android:hint="25565"
                android:singleLine="true"
                android:inputType="none|number"
                android:text="25565" />
        </GridLayout>
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_column="0"
            android:layout_row="6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:max="100"
            android:progress="100" />
        <GridLayout
            android:layout_row="7"
            android:layout_column="0"
            android:rowCount="1"
            android:columnCount="2"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <Space
                android:layout_column="0"
                android:layout_row="0"
                android:layout_width="220dp"
                android:layout_height="20dp" />
            <Button
                android:text="Connect"
                android:minWidth="125dp"
                android:minHeight="50dp"
                android:layout_column="1"
                android:layout_row="0"
                android:paddingHorizontal="44dp"
                android:onClick="Run_Ping"
                android:id="@+id/PingButton" />
        </GridLayout>
        <Space
            android:layout_column="0"
            android:layout_row="8"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
    </GridLayout>

</RelativeLayout>